<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--        Inherited form view of education student     -->
    <record id="education_student_view_form" model="ir.ui.view">
        <field name="name">student.history.smart.button.form</field>
        <field name="model">education.student</field>
        <field name="inherit_id"
               ref="education_core.education_student_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(education_promotion.education_student_final_result_action)d"
                        type="action"
                        class="oe_stat_button" icon="fa-list-alt"
                        string="Student History"/>
            </xpath>
        </field>
    </record>
</odoo>
