<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Academic Configuration Form View -->
        <record id="view_academic_config_form" model="ir.ui.view">
            <field name="name">academic.config.form</field>
            <field name="model">academic.config</field>
            <field name="arch" type="xml">
                <form string="Academic Configuration">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="institution_name" placeholder="Enter Institution Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="institution_code"/>
                                <field name="current_academic_year"/>
                                <field name="system_version" readonly="1"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="max_students_per_course"/>
                                <field name="min_students_per_course"/>
                            </group>
                        </group>
                        <group string="Contact Information">
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="website"/>
                            </group>
                        </group>
                        <group string="Address">
                            <field name="address" nolabel="1"/>
                        </group>
                        <group string="Payment Terms">
                            <field name="payment_terms" nolabel="1"/>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Academic Configuration Tree View -->
        <record id="view_academic_config_tree" model="ir.ui.view">
            <field name="name">academic.config.tree</field>
            <field name="model">academic.config</field>
            <field name="arch" type="xml">
                <list string="Academic Configuration">
                    <field name="institution_name"/>
                    <field name="institution_code"/>
                    <field name="current_academic_year"/>
                    <field name="currency_id"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Academic Configuration Search View -->
        <record id="view_academic_config_search" model="ir.ui.view">
            <field name="name">academic.config.search</field>
            <field name="model">academic.config</field>
            <field name="arch" type="xml">
                <search string="Academic Configuration">
                    <field name="institution_name"/>
                    <field name="institution_code"/>
                    <field name="current_academic_year"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Academic Configuration Action -->
        <record id="action_academic_config" model="ir.actions.act_window">
            <field name="name">Academic Configuration</field>
            <field name="res_model">academic.config</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_academic_config_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first academic configuration!
                </p>
                <p>
                    Configure your academic system settings including institution details,
                    academic year, and system preferences.
                </p>
            </field>
        </record>

        <!-- Academic Configuration Menu -->
        <menuitem id="menu_academic_config"
                  name="Academic Configuration"
                  parent="base.menu_administration"
                  action="action_academic_config"
                  sequence="10"/>

    </data>
</odoo>
